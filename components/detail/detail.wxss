/* pages/detail/detail/detail.wxss */

.detail-box {
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #666;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
}

.detail-item  image {
  width: 100rpx;
  height: 100rpx;
}

.item {
  border-bottom: 1rpx solid #ddd;
}

.item > view {
  display: flex;
  line-height: 60rpx;
  justify-content: space-between;
}

.item-title {
  line-height: 60rpx;
  width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-description {
  line-height: 80rpx;
}
