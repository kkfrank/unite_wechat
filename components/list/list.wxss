/* components/list/list.wxss */

.item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  padding: 30rpx 0;
  font-size: 32rpx;
}

.left {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 0 10rpx;
}

.item image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 15rpx;
}

.teacher-list .content {
  color: #666;
  padding: 0 20rpx;
  line-height: 70rpx;
  display: -webkit-box;
  text-indent: 80rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  font-size: 32rpx;
  overflow: hidden;
  word-break:break-all;
}
.activity-list .content {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  flex-direction: column;
  width: 700rpx;
  padding: 0 10rpx;
}
.activity-list .content>view {
  line-height: 70rpx;
  font-size: 32rpx;
}
