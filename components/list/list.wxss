/* components/list/list.wxss */

.item {
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.left {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}

.item image {
  width: 100rpx;
  height: 100rpx;
}

.content {
  padding: 0 10rpx;
  line-height: 60rpx;
  display: -webkit-box;
  text-indent: 80rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
