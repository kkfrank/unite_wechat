/* pages/teacher/detail/detail.wxss */
.teacher-box {
  padding: 0 20rpx;
  font-size: 32rpx;
  color: #666;
}
.teacher-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  border-bottom: 1rpx solid #ddd;
}
.teacher-item  image {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 0 20rpx;
}
.item-content {
  margin-top: 20rpx;
  text-align: left;
  line-height: 80rpx;
  font-size: 32rpx;
  text-indent: 60rpx;
}
.item-title {
  line-height: 60rpx;
  width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item-description {
  line-height: 70rpx;
}
