<!--pages/teacher/teacher.wxml-->
<view class="teacher-box">
  <view class="teacher-item">
    <view class="item-image">
      <image src='{{teacher.url}}' mode="aspectFit"></image>
      <view>
        <text>{{teacher.name}}</text>
      </view>
    </view>
    <view class="item-content">
      <text>{{teacher.position}},{{teacher.description}}</text>
    </view>
  </view>
  <list list="{{list}}" typeName="lesson"></list>
</view>