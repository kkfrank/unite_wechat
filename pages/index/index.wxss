/* pages/index/index2.wxss */
text, view {
  font-family: PingFangSC-Semibold;
}
.box {
  position: relative;
  background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 100%);
}

.box .bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
  background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 100%);
}

.box .img image {
  width: 750rpx;
  height: 100%;
}

.container {
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 4;
}

.content {
  padding: 0 32rpx;
}

.logo-box image {
  margin-top: 80rpx;
  width: 174rpx;
  height: 64rpx;
}

.title-box {
  margin-top: 32rpx;
  font-size: 80rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 96rpx;
}

.desc-box {
  margin-top: 64rpx;
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(245, 245, 245, 1);
  line-height: 64rpx;
}

.submit-box {
  margin-top: 80rpx;
  font-size: 36rpx;
  font-weight: 400;
}

.submit-box button {
  background: rgba(33, 150, 243, 1);
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 96rpx;
  line-height: 96rpx;
  color: rgba(255, 255, 255, 1);
}
