/* pages/nav/nav.wxss */

text, view {
  font-family: PingFangSC-Semibold;
}

.box {
  position: relative;
  background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 100%);
}

.box .img image {
  width: 750rpx;
  height: 100%;
}

.box .nav {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 48rpx 32rpx 0;
}

.box .nav-item {
  margin-top: 32rpx;
  width: 100%;
  height: 272rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 8rpx;
  border: 4rpx solid rgba(255, 255, 255, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  position: relative;
}

.tips {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  border-bottom: 1rpx solid #ddd;
  background-color: #40a9ff;
  padding: 0 20rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}

.tips text {
  display: inline-block;
  padding-bottom: 10rpx;
}
.hot {
  position: absolute;
  right: 0;
  color: #fff;
  top: 20rpx;
  width: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #40a9ff;
  height: 40rpx;
  padding: 6rpx;
  font-size:38rpx;
}
